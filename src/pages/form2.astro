---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import { question2 } from "../content/forms/lead-report.form";
import Button from "../components/buttons/Button.astro";

const question = question2;
---

<Layout title={"Form"} header={false}>
  <Main>
    <div class="flex flex-col items-center justify-center min-h-screen">
      <h1
        class="font-bold font-heading leading-tighter tracking-tighter mb-4 text-formPrimary md:text-3xl text-xl lg:max-w-xl text-center"
      >
        {question.title}
      </h1>
      <h4 class="text-sm md:text-base leading-tight mb-8">
        {question.subtitle}
      </h4>
      <h1
        class="font-bold font-heading leading-tighter tracking-tighter mb-4 text-formPrimary md:text-2xl text-xl lg:max-w-xl text-center"
      >
        {question.label}
      </h1>
      {
        question.inputQuestions.map((inputQuestion) => {
          return (
            <div class="flex flex-col space-y-4 w-full md:max-w-screen-sm mb-4">
              <div class="flex flex-col text-left">
                <label class="mb-1">
                  <strong>{inputQuestion.label}</strong>
                </label>
                <input
                  type="text"
                  class="text-lg block rounded text-dark no-underline py-2 px-4 min-w-20 border border-gray-300"
                  placeholder={inputQuestion.placeholder}
                />
              </div>
            </div>
          );
        })
      }

      <Button
        text="VER MI TARJETA"
        customClasses="bg-formPrimary text-white w-full md:max-w-screen-sm mt-6"
        ref=""
      />
    </div>
  </Main>
</Layout>
