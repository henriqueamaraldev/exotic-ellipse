<script>
  document
    .getElementById("navMenuToggler")
    ?.addEventListener("click", function () {
      this.classList.toggle("active");

      // Aqui você também pode alternar a visibilidade do menu real
      const navMenu = document.getElementById("navMenu");

      navMenu?.classList.toggle("h-0");
      navMenu?.classList.toggle("h-full");
      navMenu?.classList.toggle("opacity-0");
      navMenu?.classList.toggle("opacity-100");
    });
</script>

<style>
  .menu-icon span {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    transition: all 0.3s ease-in-out;
    background-color: #d8d8d8;
  }

  .menu-toggler.active .menu-icon span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-toggler.active .menu-icon span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggler.active .menu-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }
</style>

<header class="h-20 md:h-20 px-8 md:px-28 flex gap-12 items-center">
  <a href="#" class="text-3xl font-bold">Rhitmo</a>

  <button
    id="navMenuToggler"
    class="menu-toggler fixed right-2 p-4 z-20 md:hidden"
  >
    <div class="menu-icon">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </button>

  <div
    id="navMenu"
    class="fixed md:relative top-0 left-0 bg-primary bg-opacity-95 text-center overflow-hidden transition-all duration-500 md:flex my-20 flex-col md:flex-row gap-8 items-center justify-center w-full h-0 opacity-0 z-10 md:h-full md:opacity-100"
  >
    <nav
      class="md:flex-1 mx-4 md:mx-0 text-left flex gap-5 flex-col md:flex-row my-5 border-gray-300 pt-6 border-t md:border-transparent font-medium md:font-normal text-xl md:text-base"
    >
      <a href="#">Home</a>
      <a href="#">Company</a>
      <a href="#">Products</a>
      <a href="#">Contact Us</a>
    </nav>
  </div>
</header>
