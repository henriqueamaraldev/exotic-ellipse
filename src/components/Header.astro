---
import Button from "./buttons/Button.astro";
---

<script>
  document
    .getElementById("navMenuToggler")
    ?.addEventListener("click", function () {
      const navMenu = document.getElementById("navMenu");
      navMenu?.classList.toggle("h-0");
      navMenu?.classList.toggle("h-full");
      navMenu?.classList.toggle("opacity-0");
      navMenu?.classList.toggle("opacity-100");
    });
</script>

<header class="h-20 md:h-20 px-8 md:px-28 flex gap-12 items-center">
  <a href="#" class="text-3xl font-bold">Rhitmo</a>

  <button id="navMenuToggler" class="fixed right-2 p-4 z-20 md:hidden">
    Menu
  </button>
  <div
    id="navMenu"
    class="fixed md:relative top-0 left-0 bg-primary bg-opacity-95 text-center overflow-hidden transition-all duration-500 flex flex-col md:flex-row gap-8 items-center justify-center w-full h-0 opacity-0 z-10 md:h-full md:opacity-100"
  >
    <nav class="md:flex-1 flex gap-8 flex-col md:flex-row">
      <a href="#">Home</a>
      <a href="#">Company</a>
      <a href="#">Products</a>
      <a href="#">Contact Us</a>
    </nav>
    <Button />
  </div>
</header>
